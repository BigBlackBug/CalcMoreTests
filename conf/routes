# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

GET     /saveword                               Application.saveWord


#   Rest API
PUT     /api/words                              CalcMoreRestAPI.saveWord
POST     /api/words                              CalcMoreRestAPI.saveWord
DELETE    /api/words                              CalcMoreRestAPI.clearDB
GET     /api/words/count                          CalcMoreRestAPI.wordsCount
GET     /api/words                               CalcMoreRestAPI.words


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
